{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "assignAutomerge": true,
  "extends": [
    "config:base",
    "group:monorepos",
    "group:recommended",
    "helpers:disableTypesNodeMajor",
    "packages:eslint",
    "packages:stylelint",
    "packages:test",
    "helpers:pinGitHubActionDigests",
    "workarounds:all",
    ":automergeDisabled"
  ],
  "enabled": true,
  "ignorePaths": [
    "**/node_modules/**",
    "**/bower_components/**",
    "**/vendor/**",
    "**/examples/**",
    "**/__tests__/**",
    "**/test/**",
    "**/tests/**",
    "**/__fixtures__/**"
  ],
  "rangeStrategy": "pin",
  "separateMajorMinor": true,
  "separateMultipleMajor": true,
  "separateMinorPatch": true,
  "branchPrefix": "dependencies/",
  "labels": ["dependencies :package:"],
  "rebaseWhen": "conflicted",
  "baseBranches": ["develop"],
  "prCreation": "immediate",
  "prHourlyLimit": 5,
  "automergeType": "pr",
  "ignoreTests": false,
  "updateNotScheduled": true,
  "semanticCommits": "enabled",
  "ignoreUnstable": true,
  "respectLatest": true,
  "enabledManagers": ["npm", "github-actions"],
  "npm": {
    "enabled": true,
    "fileMatch": ["package.json", "documentation/package.json"]
  },
  "major": {
    "branchPrefix": "dependencies/major/",
    "automerge": false,
    "enabled": true
  },
  "minor": {
    "branchPrefix": "dependencies/minor/",
    "automerge": false,
    "enabled": true
  },
  "patch": {
    "branchPrefix": "dependencies/patch/",
    "automerge": false,
    "enabled": true
  },
  "pin": {
    "branchPrefix": "dependencies/pin/",
    "automerge": false,
    "enabled": true
  },
  "lockFileMaintenance": {
    "branchPrefix": "dependencies/lock-file/",
    "automerge": false,
    "enabled": true,
    "rebaseWhen": "behind-base-branch"
  },
  "vulnerabilityAlerts": {
    "automerge": false,
    "enabled": true,
    "rebaseWhen": "behind-base-branch"
  },
  "semanticCommitType": "chore",
  "assignees": ["C0ZEN"],
  "reviewers": ["C0ZEN"],
  "branchConcurrentLimit": 30,
  "prConcurrentLimit": 10,
  "packageRules": [
    {
      "matchDepTypes": ["dependencies", "peerDependencies", "devDependencies"],
      "rangeStrategy": "pin"
    },
    {
      "groupName": "Semantic release dependencies",
      "matchPackagePatterns": ["^@semantic-release/", "^semantic-release$"],
      "matchUpdateTypes": ["major"]
    }
  ]
}
